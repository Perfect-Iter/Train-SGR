<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ticket_border"
        android:paddingHorizontal="15dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="8dp"

        >
        <TextView
            android:id="@+id/txtTicketingNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ticket Number: "
            android:textSize="15dp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"

            />
        <TextView
            android:id="@+id/txtTicketNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="qwerty123"

            app:layout_constraintStart_toEndOf="@id/txtTicketingNumber"
            app:layout_constraintTop_toTopOf="parent"
            />
        txtTicketNumber
        <TextView
            android:id="@+id/txtTicketingName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name: "
            android:textSize="15sp"

            app:layout_constraintTop_toBottomOf="@id/txtTicketingNumber"
            app:layout_constraintStart_toStartOf="parent"
            />
        <TextView
            android:id="@+id/txtUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="Rubben"

            app:layout_constraintStart_toEndOf="@id/txtTicketingName"
            app:layout_constraintTop_toBottomOf="@id/txtTicketNumber"

            />
        <TextView
            android:id="@+id/ticketingFrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:text="From: "

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtTicketingName"
            />
        <TextView
            android:id="@+id/txtSource"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="Nairobi"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/txtTicketingName"
            app:layout_constraintStart_toEndOf="@id/ticketingFrom"
            />
        <TextView
            android:id="@+id/ticketingTo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:text="To: "

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ticketingFrom"
            />
        <TextView
            android:id="@+id/txtDestination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="Bungoma"
            android:layout_marginTop="10dp"

            app:layout_constraintStart_toEndOf="@id/ticketingTo"
            app:layout_constraintTop_toBottomOf="@id/txtSource"

            />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>